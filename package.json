{
  "name": "@thegraid/hexcity",
  "version": "0.5.0",
  "description": "Browser-based client to play hexcity (standalone or with Client-Group Server)",
  "browser": "true",
  "scripts": {
    "uncache": "rm -rf .angular/cache",
    "starturl": "http://localhost:4202/?ghost=game7&ext=Event,Event2",
    "make-proto": "bin/make-patch",
    "tsc-options": "are configured in tsconfig.json & tsconfig.app.json",
    "tsc": "tsc --build tsconfig.app.json",
    "etest": "npm run test -- effects | grep -v '        '",
    "test": "jest --runInBand --force-exit --detectOpenHandles --verbose",
    "clean": "rm -rf out-tsc/*",
    "instClient": "npm i ../../ts/wspbclient/thegraid-wspbclient*.tgz",
    "rmall": "aws s3 rm s3://citymap.thegraid.com/ --recursive",
    "rmapp": "aws s3 rm s3://citymap.thegraid.com/ --recursive --exclude \"assets/*\"",
    "cpapp": "aws s3 cp dist/citymap0 s3://citymap.thegraid.com --recursive --exclude \"assets/*\"",
    "sync": "aws s3 sync dist/citymap0 s3://citymap.thegraid.com",
    "prod": "ng build citymap --configuration production",
    "build": "npm run clean; npm run make-proto; npm run tsc",
    "ng": "ng",
    "newlib": "npm i ../../ts/createjs-lib/thegraid-easeljs-lib-*.tgz ; rm -rf .angular/cache",
    "start": "ng serve",
    "ngbuild": "ng build",
    "watch": "ng build --watch --configuration development"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.12",
    "@angular/common": "^17.3.12",
    "@angular/compiler": "^17.3.12",
    "@angular/core": "^17.3.12",
    "@angular/forms": "^17.3.12",
    "@angular/platform-browser": "^17.3.12",
    "@angular/platform-browser-dynamic": "^17.3.12",
    "@angular/router": "^17.3.12",
    "@thegraid/common-lib": "^1.3.40",
    "@thegraid/easeljs-lib": "^1.3.7",
    "@thegraid/easeljs-module": "^1.2.2",
    "@thegraid/ezpromise": "^1.2.1",
    "@thegraid/wspbclient": "^1.4.26",
    "google-protobuf": "^3.20.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.9",
    "@angular/cli": "^17.3.9",
    "@angular/compiler-cli": "^17.3.12",
    "@types/google-protobuf": "^3.15.5",
    "@types/jasmine": "~4.3.0",
    "@types/wicg-file-system-access": "^2020.9.8",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "^5.4.5"
  }
}